#include <iostream>

using namespace std;
int sp;
void kreska(int n){
    for(int k=0; k<n; k++)
    {
        cout << "/";
    }
}
void spacja(int n){
    for(int k=0; k<n; k++)
    {
        cout << " ";
    }
}

void litera_k(){
    sp=3;
    for (int k=1; k<=4; k++)
    {
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp--;
    }
    for (int k=1; k<=3; k++)
    {
        kreska(3);
        spacja(sp+2);
        kreska(3);
        cout<<endl;
        sp++;
    }
}
void litera_r(){
    kreska(8);
    cout<<endl;
    for (int k=1; k<=3; k++)
    {
        kreska(3);
        spacja(3);
        kreska(3);
        cout<<endl;
    }
    sp=0;
    for (int k=1; k<=3; k++)
    {
        sp++;
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
    }
}
void litera_s(){
    kreska(9);
    cout << endl;
    for (int k=1; k<=2; k++)
    {
        kreska(3);
        cout <<endl;
    }
    kreska(9);
    cout<<endl;
    for (int k=1; k<=2; k++)
    {
        spacja(6);
        kreska(3);
        cout <<endl;
    }
    kreska(9);
    cout << endl;
}
void litera_y(){
    sp=3;
    int sp2=0;
    for (int k=1; k<=2; k++)
    {
        spacja(sp2);
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp=sp-2;
        sp2++;
    }
    spacja(sp2);
    kreska(5);
    cout<<endl;
    for (int k=1; k<=4; k++)
    {
        spacja(3);
        kreska(3);
        cout<<endl;
    }
}
void litera_z(){
    kreska(9);
    cout<<endl;
    sp=5;
    for (int k=1; k<=5; k++)
    {
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp--;
    }
    kreska(9);
    cout << endl;
}

void wybor(char n){
    switch (n){
        case 'k': {
            litera_k();
            break;
        }
        case 'r': {
            litera_r();
            break;
        }
        case 's': {
            litera_s();
            break;
        }
        case 'y': {
            litera_y();
            break;
        }
        case 'z': {
            litera_z();
            break;
        }
        case '_': {
            cout << endl << endl << endl;
            break;
        }
    }
}
void copis(int x){
    int l;
    l = x;
    char lit[l];
    for (x; x>=1; x--)
    {
        cin >> lit[x];
    }
    x = l;
    for (x; x>=1; x--)
    {
        wybor(lit[x]);
    }
}

int main()
{
    int x=5;
    cout << "Ile liter?: ";
    cin >> x;
    copis(x);

    return 0;
}
